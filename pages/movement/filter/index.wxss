/* index.wxss */

.m-contents .m-content .item {
  display: flex;
  margin: 0 30rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 34rpx;
  color: #353535;
  border-bottom: 1rpx solid #e5e5e5;
  box-sizing: border-box;
  padding: 0 20rpx;
  text-align: justify;
}

.m-contents .m-content .item view {
  flex: 1;
}

.m-contents .m-content .item .left {
  text-align: left;
  line-height: 88rpx;
}

.m-contents .m-content .item .left image {
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  margin-right: 20rpx;
}

.m-contents .m-content .item .left .m-movetype {
  display: inline;
}

.m-contents .m-content .item .right {
  text-align: right;
  line-height: 88rpx;
}

.m-contents .m-content .item .left .m-eggGroup {
  background-color: transparent;
}

.m-contents .m-content .item .right image {
  display: inline-block;
  width: 46rpx;
  height: 46rpx;
  vertical-align: middle;
}

.buttons {
  width: 100%;
  height: 128rpx;
  box-sizing: border-box;
  display: flex;
  position: fixed;
  bottom: 0;
  background-color: #fff;
  padding: 17rpx 40rpx;
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
}

.buttons .btn {
  width: 320rpx;
  height: 94rpx;
  line-height: 94rpx;
  text-align: center;
  box-sizing: border-box;
  color: #000;
  font-size: 36rpx;
  background-color: #f8f8f8;
  border-radius: 10rpx;
  border: 2rpx solid rgba(0, 0, 0, 0.1);
}

.buttons .confirm {
  float: right;
  color: #fff;
  background-color: #dc4343;
  margin-left: 30rpx;
}
